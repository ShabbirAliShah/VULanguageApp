<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FlashCardsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         app:cardCornerRadius="20dp"
        app:contentPadding="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardText"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FFEB3B"
                    android:gravity="center"
                    android:text="Pakhair raghly"
                    android:textAlignment="center"
                    android:textColor="#263238"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/inLanguageText"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="#FF5722"
                    android:gravity="center"
                    android:text="پخېر راغلې"
                    android:textAlignment="center"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    tools:ignore="VisualLintBounds" />

            </LinearLayout>

            <ImageView
                android:id="@+id/cardIcon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#F0EEEE"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_handshake_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cardBackText"
                    android:layout_width="251dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#F44336"
                    android:gravity="center"
                    android:text="Welcome"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/speakWord"
                    android:layout_width="107dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pronunciate"
                    android:layout_marginTop="10dp"
                    android:tooltipText="Speak aloud"
                    android:background="#FFEB3B"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>