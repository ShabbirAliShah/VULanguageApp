<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PronunciationExecerciseFragment">

    <LinearLayout
        android:id="@+id/linearLayout17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="You are Learning Arabic"
            android:textAlignment="textEnd"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="#ABA7A7">

        </LinearLayout>

        <TextView
            android:id="@+id/fdsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Pronunciation"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fnnndsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="left"
            android:text="Learn How to pronunciate by clicking the icon"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vocabRecycler"
        android:layout_width="409dp"
        android:layout_height="591dp"
        tools:listitem="@layout/card_view_pronunciation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout17" />

</androidx.constraintlayout.widget.ConstraintLayout>
