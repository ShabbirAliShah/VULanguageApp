<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_lesson_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lesson Title"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_audio_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Audio Link"
        android:inputType="textUri"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_video_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Video Link"
        android:inputType="textUri"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editIMageLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image Link"
        android:inputType="textUri"
        android:minHeight="48dp" />

</LinearLayout>
